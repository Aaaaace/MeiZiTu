/* pages/xiandu/xiandu.wxss */

.list {
  height: 100%;
  width: 100%;
}

.item {
  width: 100%;
}

.list .item .item_bd {
  padding: 20rpx;
  height: 200rpx;
  background-color: #fff;
  border-bottom: 3rpx solid #eee;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  -webkit-box-flex: 0;
  -webkit-flex: 0;
  flex: 0;
}

.list .item_bd .item_text {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
}

.list .item_bd .item_text .item_title {
  width: 100%;
  overflow: hidden;
  text-align: left;
  margin-bottom: 10rpx;
  font-size: 36rpx;
}

.list .item_bd .item_text .item_post-time {
  width: 100%;
  overflow: hidden;
  text-align: right;
  font-size: 28rpx;
  color: #bbb;
}
