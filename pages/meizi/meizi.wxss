/**index.wxss**/

.container {
  width: 100%;
  padding: 5rpx 5rpx;
}
mask{
  width: 100%;
  height: 100%;
}

.style1 {
  width: 90%;
  font-size: 32rpx;
  border-radius: 10rpx;
  box-shadow: 0rpx 8rpx 2rpx 4rpx #ddd;
  margin: 20rpx auto;
  padding: 4rpx;
  text-align: center;
}

.style2 {
  width: 50%;
  font-size: 0;
  float: left;
  overflow: hidden;
  box-sizing: border-box;
  padding: 5rpx;
}

.img {
  width: 100%;
  height: 340rpx;
  display: block;
}

.hover-button {
  position: fixed;
  bottom: 40rpx;
  left: 40rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  border: 10rpx solid rgb(204, 204, 204);
  background: #fff;
  padding: 10rpx;
  opacity: 0.7;
}
